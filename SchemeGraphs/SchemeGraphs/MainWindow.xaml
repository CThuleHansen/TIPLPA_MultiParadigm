<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="SchemeGraphs.MainWindow"
    Title="Simple Scheme Embedding" Height="500" Width="640">
    <Grid>
        <StackPanel>
            <Label FontWeight="Bold" Content="Scheme Result:"/>
            <TextBox x:Name="DisplayArea" Height="100" IsReadOnly="True"/>
            <Label FontWeight="Bold" Content="Input:"/>
            <TextBox x:Name="Input" Height="100"/>
            <Button Click="Evaluate_Click" Content="Evaluate"/>

            <chartingToolkit:Chart HorizontalAlignment="Left"  Name="lineChart" Title="Chart Title" VerticalAlignment="Top" Width="632" Height="197">
                <chartingToolkit:LineSeries DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding}" IsSelectionEnabled="True"/>                   
            </chartingToolkit:Chart>
        </StackPanel>
        
    </Grid>
</Window>