<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:oxy="http://oxyplot.codeplex.com"
    x:Class="SchemeGraphs.Views.MainWindow"
    Title="Simple Scheme Embedding" Height="500" Width="800">
    <StackPanel Orientation="Vertical">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="10,0,1,0">
                <Label FontWeight="Bold" Content="Function:"/>
                <TextBox x:Name="tb_function" Text="(lambda (x) (* x x))" Height="36" />
                <Label FontWeight="Bold" Content="X From:"/>
                <TextBox x:Name="tb_xfrom" Text="1" Height="18" FontSize="11"/>
                <Label FontWeight="Bold" Content="X To:"/>
                <TextBox x:Name="tb_xto" Text="5" Height="18" FontSize="11"/>
                <Label FontWeight="Bold" Content="Dx:"></Label>
                <TextBox x:Name="tb_dx" Height="18" FontSize="11"></TextBox>
                <Label FontWeight="Bold" Content="Samples:"/>
                <TextBox x:Name="tb_samples" Text="5" Height="18" FontSize="11"/>

                <Label Content="Calucations:" FontWeight="Bold" Margin="0,4,0,0" ></Label>
                <CheckBox Content="Derrivative"></CheckBox>
                <CheckBox Content="Integral" IsEnabled="False"></CheckBox>

                <Label Content="Scale:" Margin="0,4,0,0"></Label>
                <RadioButton GroupName="rb_scale" Content="Linear" IsChecked="True" Checked="CbLinearChecked"></RadioButton>
                <RadioButton GroupName="rb_scale" Content="Log10" Checked="CbLogChecked" ></RadioButton>

                <Button Click="EvaluateClick" Content="Draw"/>
                <Button Content="Clear" Click="ClearClick"></Button>
            </StackPanel>
            
            <oxy:PlotView Model="{Binding MyModel}" Margin="0,0,0,0" Grid.Column="1"/>
        </Grid>

        <Label FontWeight="Bold" Content="Output:"/>
        <TextBox x:Name="tb_output" Height="76" IsReadOnly="True"/>
    </StackPanel>
</Window>